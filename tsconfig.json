{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false
  },
  "exclude": [ "node_modules" ],
  "include": [ "./**/*.ts" ]
}